<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    tools:context="com.company.takeyournotes.ui.AddNoteActivity">

    <EditText
        android:id="@+id/activity_add_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="textCapSentences"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title"
        android:hint="@string/activity_add_note_title_hint" />

    <EditText
        android:id="@+id/activity_add_note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:inputType="textCapSentences|textMultiLine"
        android:textSize="@dimen/text_size_content"
        android:hint="@string/activity_add_note_content_hint" />

</LinearLayout>
